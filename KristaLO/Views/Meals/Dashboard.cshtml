@model List<KristaLO.Models.Meals>

<h1>What you're cooking!</h1>

@if (Model.Count == 0)
{
    <p>No meals</p>
}
else
{
    <div>
        <ul>
            @foreach (Meals meal in Model)
            {
                <li>
                    <a asp-controller="Meals" asp-action="Info" asp-route-id="@meal.Id">@meal.Name</a>
                </li>
            }
        </ul>
    </div>

}